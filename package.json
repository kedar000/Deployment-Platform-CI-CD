{
  "name": "deployment-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "bootstrap": "npm install",
    "db:generate": "npm --workspace @shared/db run db:generate",
    "db:migrate": "npm --workspace @shared/db run db:migrate",
    "db:deploy": "npm --workspace @shared/db run db:deploy",
    "db:studio": "npm --workspace @shared/db run db:studio"
  },
  "devDependencies": {
    "turbo": "^1.8.4",
    "typescript": "^5.0.0"
  }
}